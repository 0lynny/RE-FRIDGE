<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btnssg"
        android:layout_width="163dp"
        android:layout_height="156dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ssg"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncoupang"
        app:layout_constraintVertical_bias="0.006" />

    <ImageButton
        android:id="@+id/btnkurly"
        android:layout_width="157dp"
        android:layout_height="145dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/kurly"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="아이콘을 누르면 해당 온라인몰로 이동합니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btncoupang"
        android:layout_width="158dp"
        android:layout_height="153dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/cou"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnkurly"
        app:layout_constraintVertical_bias="0.0"
         />

    <ImageButton
        android:id="@+id/btnlotte"
        android:layout_width="147dp"
        android:layout_height="144dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/lotte"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btncoupang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/btnkurly"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/lotte" />

    <ImageButton
        android:id="@+id/btnGS"
        android:layout_width="145dp"
        android:layout_height="148dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/gs"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toEndOf="@+id/btncoupang"
        app:layout_constraintTop_toBottomOf="@+id/btnlotte"
        app:layout_constraintVertical_bias="0.003"
        />

    <ImageButton
        android:id="@+id/btnCJ"
        android:layout_width="151dp"
        android:layout_height="154dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/cj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toEndOf="@+id/btnssg"
        app:layout_constraintTop_toBottomOf="@+id/btnGS"
        app:layout_constraintVertical_bias="0.05"
        />

</androidx.constraintlayout.widget.ConstraintLayout>